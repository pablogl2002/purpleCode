FROM python:3.10
WORKDIR /api/
COPY ./purpleCode/cookies/* /api/cookies/
COPY ./purpleCode/spacebot/* /api/spacebot/
COPY ./purpleCode/api.py /api/
COPY ./purpleCode/requirements.txt /api/

ENV ENV_BOT_EMAIL "adri_mrtnz@hotmail.com"
ENV ENV_BOT_PASSWD "BotSpaceApps2023"
ENV ENV_BOT_COOKIES "/app/cookies"

RUN pip install -r requirements.txt
CMD uvicorn api:app --host 0.0.0.0 --port 8082